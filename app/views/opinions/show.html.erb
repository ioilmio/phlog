<p id="notice"><%= notice %></p>
<%=render 'layouts/header'%>
<%@opinions.each do |opinion|%>
<div class="row">
  <div class="col-md-4 bg-light offset-md-4 p-4 mb-2 rounded">
    <div class="card-body">
    <%= gravatar_for @user%>
      <%= @user.username %>
    <div class="time-ago justify-content-end d-flex">
      <%= time_ago_in_words(opinion.created_at)%>
    </div>
    </div>
    <div class="d-flex justify-content-center">
  <%= opinion.content %>
    </div>
    <div class="d-flex justify-content-end mt-4">
    <%= link_to 'Edit', edit_opinion_path(@opinion), class:'btn btn-primary mr-2'%>
    <%= link_to 'Back', opinions_path, class:'btn btn-danger' %>
    </div>
  </div>
</div>
<% end %>

