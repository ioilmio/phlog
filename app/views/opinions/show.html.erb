<%=render 'layouts/header'%>
<div class="row">
  <div class="col-md-8 bg-light offset-md-2 p-4 mb-2 rounded">
    <div class="card-body">
    <div>
      <%=photo_for(@opinion.user) %>
      <%= @opinion.user.username %>
    </div>
      <div class="opi-content my-2">
      <%= @opinion.content %>
      </div>
         <div class="card-body">
                <div>
        <div class="time-ago justify-content-end d-flex">
          <%= time_ago_in_words(@opinion.created_at)%>
        </div>
    </div>
    <div class="d-flex justify-content-center">
                          <%= image_tag @opinion.image if @opinion.image.attached? %>               

    </div>
    <div class="d-flex justify-content-end mt-4">
    <%if current_user == @user%>
            <%= link_to 'Edit', edit_opinion_path(@opinion), class:'mr-2'%>
            <span><%= link_to 'Destroy', @opinion, method: :delete, data: { confirm: 'Are you sure?' }, class:'mr-2' %></span>
            <%end%>    <span> &nbsp;
    <%= link_to ' Back', opinions_path%>
    </span>
    </div>
  </div>
</div>

